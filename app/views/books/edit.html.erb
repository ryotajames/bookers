<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>body</p>
  <%= f.text_area :body %>

  <div><%= f.submit 'Update Book' %></div>
  
  <%= link_to "Show", book_path %>
  <span>|</span>
  <%= link_to "Back", books_path %>

<% end %>