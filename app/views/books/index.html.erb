<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
    <%= book.title %>
    </td>
    <td>
    <%= book.body %>
    </td>

    <td>
      <%= link_to "Show", book_path(book.id) %>
    </td>
    <td>
      <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete %>
    </td>

  </tr>
  <% end %>
</table>

<%= form_with model:@book, url: '/books', method: :post do |f| %>
  <h4>New book</h4>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p class = "create"><%= f.submit 'Create Book' %></p>
<% end %>
